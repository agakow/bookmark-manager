<h1> Links </h1>

<form action="/links/new">
  <input type="submit" value="Add Link">
</form>

<ul id='links'>
  <% @links.each do |link| %>
    <li>
      Title:  <%= link.title %>
      URL:    <%= link.url %>
    </li>
  <% end %>
</ul>


<form action="/tags" method = "get">
  <label for = "tag">
    Enter tag
  <input type = "text" name = "tag"/>
  </label>
  <input type="submit" value="Search tags"/>
</form>
